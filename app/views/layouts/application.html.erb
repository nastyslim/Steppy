<!DOCTYPE html>
<html>
<head>
  <title>Steppy</title>
	  <%= stylesheet_link_tag "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
</head>

<body>
	<div class="page">
		<div class="mynav">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
						<div class="alignleft">
							<a href="/steppies" style="padding-left:0; color:red;  font-size:15px;">Steppy - fork</a>	
						</div>
					</div>
					<div class="col-md-6">
						<div class="alignleft" style="text-align:right;">
							<%= link_to 'Request a Staircase!', steppies_ask_path, :class => '' %>
							<%= link_to 'Create a Staircase!', new_steppy_path, :class => '' %>

							<% if current_user %>
								<%= link_to current_user.username, current_user %>
								<%= link_to "log out", logout_path %>
								
							<% else %>
								
									<div>
										<%= form_tag sessions_path do %>
											<%= text_field_tag :username, nil, placeholder:"username" %>
											<%= password_field_tag :password, nil, placeholder:"password" %>
											<%= submit_tag "Log in" %>
										<% end %>
									</div>

								<b><%= link_to "Sign Up", new_user_path %></b>

							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="appcont ">
			<div class="container">
			<%= yield %>
			</div>
		</div>

		</br>
		<div class="footer2">
			<p style="text-align:center; color:#bbb; font-size:12px; text-shadow: 0 1px 1px rgba(0,0,0,.2); padding-top: 30px;">About Help Blog Status Jobs Ads Terms Privacy Advertisers Businesses Media Developers Resources Directory Â© 2013 Steppy</p>
		</div>
	</div>
</body>



</html>
