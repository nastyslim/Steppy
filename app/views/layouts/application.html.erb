                    </div>
                    <div class="form-group">
                        <%= submit_tag "Search", :name => nil, :class => "btn btn-default sbtn acolor"  %>
                    </div>
                <% end %>
	      
	      <ul class="nav navbar-nav navbar-right">
	        <li><%= link_to 'Request a Staircase!', steppies_ask_path, :class => '' %></li>
	        <li><%= link_to 'Create a Staircase!', new_steppy_path, :class => '' %></li>
	        <% if current_user %>
	        	<li><%= link_to current_user.username.capitalize, current_user %></li>
	        	<li><%= link_to "Log Out", logout_path %></li>
	        <% else %>
	        	<li class="dropdown">
		          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Log In <b class="caret"></b></a>
		          <ul class="dropdown-menu" style="width: 250px;padding: 20px;">
		          	<%= form_tag sessions_path do %>
		            <li><%= text_field_tag :username, nil, placeholder:"Username", :class => "form-control fw"  %></li>
		            <li><%= password_field_tag :password, nil, placeholder:"Password",  :class => "form-control fw"  %></li>
		            <li><%= submit_tag "Log in", :class => "btn btn-warning" %></li>

		            <% end %>
		          </ul>
		        </li>
	        	<li><%= link_to "Sign Up", new_user_path %></li>
			<% end %>
	        
	      </ul>
	    </div><!-- /.navbar-collapse -->
